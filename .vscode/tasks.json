{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Lesson",
            "type": "shell",
            "command": "make",
            "args": [
                "${fileDirnameBasename}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the project corresponding to the active file folder."
        }
    ]
}